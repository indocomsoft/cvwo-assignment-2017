<%= render "header" %>
<div id="alerts" class="alerts">
</div>
<%= form_for @user, html: { id: "needs-validation", novalidate: "novalidate" } do |u| %>
  <div class="form-group">
    <%= u.label :username %>
    <%= u.text_field :name, class: 'form-control', required: true %>
    <div class="invalid-feedback">
      Please enter a username.
    </div>
  </div>
  <div class="form-group">
    <%= u.label :name %>
    <%= u.text_field :name, class: 'form-control', placeholder: 'John Smith' %>
  </div>
  <div class="form-group">
    <%= u.label :email %>
    <%= u.text_field :email, class: 'form-control', placeholder: 'john@smith.com', required: true %>
  </div>
  <%= u.submit "Sign up", class: 'btn btn-primary' %>
<% end %>
<%= render "footer" %>

